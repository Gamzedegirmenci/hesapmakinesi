<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/b7"
                        android:layout_width="110dp"
                        android:layout_height="75dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        style="@style/Theme.AppCompat.Light.DarkActionBar"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/blackacik"
                        android:text="@string/b7"
                        android:onClick="onClickYazdir"
                        android:textColor="@color/orange"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/b8"
                        android:layout_width="110dp"
                        android:layout_height="75dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        style="@style/Theme.AppCompat.Light.DarkActionBar"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/blackacik"
                        android:text="@string/b8"
                        android:onClick="onClickYazdir"
                        android:textColor="@color/orange"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/b9"

                        android:layout_width="110dp"
                        android:layout_height="75dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        style="@style/Theme.AppCompat.Light.DarkActionBar"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/blackacik"
                        android:text="@string/b9"
                        android:onClick="onClickYazdir"
                        android:textColor="@color/orange"
                        android:textSize="30sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/b4"
                        android:layout_width="110dp"
                        android:layout_height="75dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        style="@style/Theme.AppCompat.Light.DarkActionBar"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/blackacik"
                        android:text="@string/b4"
                        android:onClick="onClickYazdir"
                        android:textColor="@color/orange"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/b5"
                        android:layout_width="110dp"
                        android:layout_height="75dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        style="@style/Theme.AppCompat.Light.DarkActionBar"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/blackacik"
                        android:text="@string/b5"
                        android:onClick="onClickYazdir"
                        android:textColor="@color/orange"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/b6"
                        android:layout_width="110dp"
                        android:layout_height="75dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        style="@style/Theme.AppCompat.Light.DarkActionBar"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/blackacik"
                        android:text="@string/b6"
                        android:onClick="onClickYazdir"
                        android:textColor="@color/orange"
                        android:textSize="30sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/b1"
                        android:layout_width="110dp"
                        android:layout_height="75dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        style="@style/Theme.AppCompat.Light.DarkActionBar"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/blackacik"
                        android:text="@string/b1"
                        android:onClick="onClickYazdir"
                        android:textColor="@color/orange"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/b2"
                        android:layout_width="110dp"
                        android:layout_height="75dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        style="@style/Theme.AppCompat.Light.DarkActionBar"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/blackacik"
                        android:text="@string/b2"
                        android:onClick="onClickYazdir"
                        android:textColor="@color/orange"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/b3"
                        android:layout_width="110dp"
                        android:layout_height="75dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        style="@style/Theme.AppCompat.Light.DarkActionBar"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/blackacik"
                        android:text="@string/b3"
                        android:onClick="onClickYazdir"
                        android:textColor="@color/orange"
                        android:textSize="30sp" />

                </TableRow>

            </TableLayout>

        </RelativeLayout>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2">

        <Button
            android:id="@+id/bce"
            android:layout_width="132dp"
            android:layout_height="75dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="6dp"
            style="@style/Theme.AppCompat.Light.DarkActionBar"
            android:background="@drawable/circle"
            android:backgroundTint="@color/blackacik"
            android:onClick="OnClickSil"
            android:text="@string/CE"
            android:textColor="@color/orange"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toStartOf="@+id/bdelete" />

        <Button
            android:id="@+id/bdelete"
            android:layout_width="132dp"
            android:layout_height="75dp"
            android:layout_marginRight="2dp"
            style="@style/Theme.AppCompat.Light.DarkActionBar"
            android:background="@drawable/circle"
            android:backgroundTint="@color/blackacik"
            android:text="@string/delete"
            android:textColor="@color/orange"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/b0"
            android:layout_width="132dp"
            android:layout_height="75dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            style="@style/Theme.AppCompat.Light.DarkActionBar"
            android:background="@drawable/circle"
            android:backgroundTint="@color/blackacik"
            android:text="@string/b0"
            android:onClick="onClickYazdir"
            android:textColor="@color/orange"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/bvirgul"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        </Button>

        <Button
            android:id="@+id/bvirgul"
            android:layout_width="132dp"
            android:layout_height="75dp"
            android:layout_marginRight="2dp"
            style="@style/Theme.AppCompat.Light.DarkActionBar"
            android:backgroundTint="@color/blackacik"
            android:background="@drawable/circle"
            android:text="@string/virgul"
            android:textColor="@color/orange"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        </Button>
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>