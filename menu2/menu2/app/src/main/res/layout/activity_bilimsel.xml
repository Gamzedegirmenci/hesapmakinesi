<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cekmece_arkaplan"
    android:background="@color/black"
    tools:context=".BilimselActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/bilimsel_toolbar"/>
        <TextView
            android:id="@+id/txtsayigiris"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:text="@string/b0"
            android:gravity="right"
            android:padding="30dp"
            android:textColor="@color/orange"
            android:textSize="50sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include layout="@layout/bilimseltuslar" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_gravity="start">

        <include layout="@layout/menu_yonlendirme_cekmecesi" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>